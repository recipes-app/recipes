<body>

    <!-- Header-->
    {{>header }}

    <!-- Section-->
    <section>
        <div class="flex-container px-4 px-lg-5 mt-0">
            <div class="row d-flex justify-content-center mt-100">
                <div class="col" id="search">
                    <form action="/recipes" method="GET">
                        <div class="input-group">
                            <input class="w-75 shadow-sm bg-body rounded" type="text" name="search" value="{{search}}">
                            <button class="btn btn-outline-secondary" type="button" id="button-addon2">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                            
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">

                {{#each recipes as |recipe|}}

                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-5">

                    <div class="card h-100">

                        {{#isRecipeAuthor user=../currentUser recipe=recipe }}
                        <div class="position-absolute actions-card-button p-3" style="top: 0.5rem; right: 0.5rem">
                            <div class="d-flow rounded-pill d-flex w-100 justify-con">
                                <a href="/recipes/{{recipe.id}}/edit"
                                    class="border border-secondary btn bg-white rounded me-1 btn-link text-secondary"><i
                                        class="fa fa-edit"></i></a>
                                <form action="/recipes/{{recipe.id}}/delete" method="post">
                                    <button type="submit"
                                        class="border border-danger btn bg-white rounded btn-link text-danger"><i
                                            class="fa fa-times"></i></button>
                                </form>
                            </div>
                        </div>
                        {{/isRecipeAuthor}}

                        <a href="/recipes/{{recipe.id}}" id="recipe-link">
                           
                            <div class="recipe-image  m-3" style="background-image: url('{{recipe.image}}')">
                            </div>
                            
                            <div class="card-body p-4">
                                <div class="text-center">
                                    
                                    <h5 class="fw-bolder">{{recipe.title}}</h5>
                                    
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
    
                                    <p> &#x23F2; <span class="text-muted ">{{recipe.cookingTime}}</span></p>


                                </div>
                            </div>
                        </a>
                    </div>

                </div>



                {{/each}}
            </div>
        </div>
    </section>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2021</p>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>

</html>