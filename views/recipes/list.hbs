<body>

    <!-- Header-->
    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Shop in style</h1>
                <p class="lead fw-normal text-white-50 mb-0">With this shop hompeage template</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row">
                {{#each recipes as |recipe|}}

                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-5">

                    <div class="card h-100">
                        <!-- Sale badge-->

                        <div class="position-absolute actions-card-button p-3" style="top: 0.5rem; right: 0.5rem">
                            <div class="d-flow rounded-pill d-flex w-100 justify-con">
                                <a href="/recipes/{{recipe.id}}/edit"
                                    class="border border-secondary btn bg-white rounded me-1 btn-link text-secondary"><i
                                        class="fa fa-edit"></i></a>
                                <form action="/recipes/{{recipe.id}}/delete" method="post">
                                    <button type="submit"
                                        class="border border-danger btn bg-white rounded btn-link text-danger"><i
                                            class="fa fa-times"></i></button>
                                </form>
                            </div>
                        </div>

                        <!-- Product image-->
                        <div class="card-img-top-wrapper">
                            <img class="card-img-top" src="{{recipe.image}}" alt="{{recipe.title}} image" />
                        </div>
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">{{recipe.title}}</h5>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <!-- Product price-->
                                <p> &#x23F2; <span class="text-muted ">{{recipe.cookingTime}}</span></p>


                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto"
                                    href="/recipes/{{recipe.id}}">See recipe</a></div>
                        </div>
                    </div>

                </div>



                {{/each}}
            </div>
        </div>
    </section>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2021</p>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>

</html>