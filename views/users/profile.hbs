<div class="container-slider mx-auto mt-6 mb-4">
    <h1 class="title-color">My recipes</h1>
</div>


<div class="flex-container px-4 px-lg-5 mt-0">
    <div class="row">
        {{#each recipes as |recipe|}}

        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-5">

            <div class="card h-100">

                {{#isRecipeAuthor user=../currentUser recipe=recipe }}
                <div class="position-absolute actions-card-button p-3" style="top: 0.5rem; right: 0.5rem">
                    <div class="d-flow rounded-pill d-flex w-100 justify-content">
                        <a href="/recipes/{{recipe.id}}/edit"
                            class="btn btn-success rounded-circle me-1 btn-link text-white ">
                            <i class="fa fa-pencil"></i>
                        </a>

                        <form action="/recipes/{{recipe.id}}/delete" method="post">
                            <button type="submit" class="btn btn-success rounded-circle" type="button"
                                id="btn-delete-recipe">X</button>
                        </form>
                    </div>
                </div>

                <a href="/recipes/{{recipe.id}}" id="recipe-link">
                    <div class="recipe-image  m-3" style="background-image: url('{{recipe.image}}')">
                    </div>

                    <div class="card-body p-4">
                        <div class="text-center">
                            <h5 class="fw-bolder">{{recipe.title}}</h5>
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                {{{ average recipe.ratings }}}
                            </div>
                            <p> &#x23F2; <span class="text-muted ">{{recipe.cookingTime}}</span></p>

                        </div>
                    </div>
                </a>

                {{/isRecipeAuthor}}
            </div>

        </div>

        {{/each}}
    </div>
</div>
{{>footer}}